<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/background_round"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/background_round_top"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_1sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp">
            <ImageView
                android:src="@drawable/ic_small_calendar"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_alignParentLeft="true"
                android:id="@+id/imv_item_ltv_noty_icon_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                />
            <TextView
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:text="Name app"
                android:layout_toRightOf="@id/imv_item_ltv_noty_icon_app"
                android:textColor="#8041436a"
                android:id="@+id/txv_item_ltv_noty_name_app"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/background_round_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            >
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/txv_item_ltv_noty_title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                />
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/txv_item_ltv_noty_content_noty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>