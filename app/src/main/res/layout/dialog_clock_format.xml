<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titlename"
    tools:context=".activitys.SettingNotyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rll_activity_enable_notify__header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.notification.notyos10.customviews.widgets.TextViewOSNormal
                android:id="@+id/txv_activity_setting_settings"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="Clock Format"
                android:textColor="@android:color/background_dark"
                android:textSize="21sp"
                android:textStyle="bold" />

            <!--<ImageView-->
                <!--android:id="@+id/imv_activity_clock_format__back"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:padding="10dp"-->
                <!--android:src="@drawable/bg_pressed_back_navigation"-->
                <!--android:text="Back" />-->
        </RelativeLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rll_activity_enable_notify__header">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.005dip"
                    android:background="@color/line" />

                <!--<RelativeLayout-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="51dp">-->

                <!--</RelativeLayout>-->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.05dip"
                    android:background="@color/line" />

                <com.notification.notyos10.customviews.widgets.MyCheckBoxView
                    android:id="@+id/ckb_activity_lock_format__24h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textFormat="@string/str_format_24h" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.05dip"
                    android:layout_marginLeft="11dp"
                    android:background="@color/line" />

                <com.notification.notyos10.customviews.widgets.MyCheckBoxView
                    android:id="@+id/ckb_activity_lock_format__12h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textFormat="@string/str_format_12h" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.05dip"
                    android:background="@color/line" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
